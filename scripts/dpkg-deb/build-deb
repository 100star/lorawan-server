SCRIPT=$(readlink $0 || true)
if [ -z $SCRIPT ]; then
    SCRIPT=$0
fi
SCRIPT_DIR="$(cd `dirname "$SCRIPT"` && pwd -P)"

REL=${SCRIPT_DIR}/../../_build/default/rel/lorawan-server
VERSION=`find ${REL}/releases -type d -name "*.*.*" -printf "%f"`
REVISION=1

ROOT=/tmp/lorawan-server_${VERSION}-${REVISION}_all

mkdir -p $ROOT/usr/lib/lorawan-server
rsync -trL --chown=root:root $REL/bin $REL/lib $REL/releases $ROOT/usr/lib/lorawan-server

mkdir -p $ROOT/lib/systemd/system
rsync -t --chown=root:root $REL/bin/lorawan-server.service $ROOT/lib/systemd/system

sed "s/<VERSION>/${VERSION}/" < ${SCRIPT_DIR}/control.template > ${SCRIPT_DIR}/control
mkdir -p $ROOT/DEBIAN
rsync -t --chown=root:root ${SCRIPT_DIR}/control ${SCRIPT_DIR}/postinst ${SCRIPT_DIR}/postrm $ROOT/DEBIAN

mkdir -p $ROOT/usr/share/doc/lorawan-server
rsync -t --chown=root:root ${SCRIPT_DIR}/../../LICENSE $ROOT/usr/share/doc/lorawan-server/copyright

dpkg-deb --build $ROOT
